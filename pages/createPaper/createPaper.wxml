<!--pages/createPaper/createPaper.wxml-->
<view class="create-paper">
  <view class="create-paper-content">
    <view class="header">
      <text style="color: red; margin-right: 16rpx;">*</text>
      <text>问卷名称</text>
    </view>
    <form class="form" bindsubmit="submit">
      <textarea
        class="form-textarea"
        placeholder="请输入问卷名称" 
        name="textarea"
      >
      </textarea>
      <van-button type="info" form-type="submit" size="large">提交</van-button>
    </form>
    <view hidden="{{ !isEmpty }}" class="warnning">请输入问卷名称！</view>
  </view>
</view>
