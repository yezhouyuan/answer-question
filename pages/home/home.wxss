/* pages/home/home.wxss */
.home{
  width: 100vw;
  height: 100vh;
  background-color: #F5F5F5;
}
.home-tabbar{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #FFFFFF;
}

.home-content{
  padding: 32rpx;
}

.scroll-item{
  position: relative;
  background-color: #FFFFFF;
  padding: 16px;
  border-radius: 8px;
  margin-bottom: 12px;
  box-shadow: 1px 1px 6px rgba(171, 171, 171, 0.1);
}

.popup-header{
  font-size: 0.8rem;
  margin-bottom: 16px;
}
.popup-item-button{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #FFFFFF;
  font-size: 0.8rem;
  margin-right: 8px;
  border-radius: 4px;
}




.title{
  font-weight: bold;
}
.text{
  padding: 6px;
}

.font-size{
  font-size: 0.8rem;
}


